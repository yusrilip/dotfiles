/* Confirm Dialog */

@import "colors.rasi"

* {
    background-color:       #151515ff;
    text-color:             #DABB22ff;
	font:				 	"Iosevka Nerd Font 12";
}

window {
    width:      			360px;
    padding:    			25px;
    border:					0px;
    border-radius:          0px;
    border-color:           @accent;
    location:               center;
    y-offset:               -20px;
}

entry {
    expand: 				true;
    text-color:				@accent;
}
